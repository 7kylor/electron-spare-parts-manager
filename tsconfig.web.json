{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/*"],
      "@shared/*": ["src/shared/*"]
    },
    "types": ["node"],
    "outDir": "out/types"
  },
  "include": [
    "src/renderer/**/*",
    "src/shared/**/*"
  ]
}
