{
  "name": "electron-spare-parts-manager",
  "version": "1.0.0",
  "description": "Inventory management application for tracking spare parts in industrial environments",
  "main": "./out/main/index.js",
  "type": "module",
  "author": "Taher Al Kiyumi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/7kylor/electron-spare-parts-manager.git"
  },
  "bugs": {
    "url": "https://github.com/7kylor/electron-spare-parts-manager/issues"
  },
  "homepage": "https://github.com/7kylor/electron-spare-parts-manager#readme",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "build:mac": "bun run build && electron-builder --mac --config",
    "build:win": "bun run build && electron-builder --win --config",
    "build:all": "bun run build && electron-builder --mac --win --config",
    "build:linux": "bun run build && electron-builder --linux --config",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "bun run typecheck:node && bun run typecheck:web",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "better-sqlite3": "^11.7.0",
    "drizzle-orm": "^0.38.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.3.9",
    "xlsx": "^0.18.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.30.1",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "lucide-react": "^0.469.0",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-router-dom": "^7.1.1",
    "recharts": "^2.15.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.0.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "zustand": "^5.0.2"
  }
